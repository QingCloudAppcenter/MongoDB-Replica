{
  "type": "array",
  "properties": [
    {
      "key": "cluster",
      "description": "cluster properties",
      "type": "array",
      "properties": [
        {
          "key": "name",
          "type": "string",
          "label": "Name",
          "description": "The name of the application",
          "default": "MongoDB Replica",
          "required": "no"
        },
        {
          "key": "description",
          "type": "string",
          "label": "Description",
          "description": "The description of the application",
          "default": "",
          "required": "no"
        },
        {
          "key": "vxnet",
          "label": "VxNet",
          "description": "The vxnet that the application will join",
          "type": "string",
          "default": "",
          "required": "yes"
        },
        {
          "key": "resource_group",
          "label": "Express Configuration",
          "description": "Test: Replica Node * 1</br>Prod: Replica Node * 3",
          "type": "string",
          "default": "Prod",
          "range": [
            "Test",
            "Prod"
          ]
        },
        {
          "key": "replica",
          "description": "Properties for config server node",
          "label": "Replica Node",
          "type": "array",
          "properties": [
            {
              "key": "instance_class",
              "label": "Instance Class",
              "description": "The instance type for the config server node",
              "type": "integer",
              "default": 202,
              "range": [
                101,
                202
              ],
              "required": "yes",
              "resource_group": [
                101,
                202
              ]
            },
            {
              "key": "cpu",
              "label": "CPU",
              "description": "CPUs of each node",
              "type": "integer",
              "range": [
                1,
                2
              ],
              "default": 2,
              "required": "yes",
              "resource_group": [
                1,
                2
              ]
            },
            {
              "key": "memory",
              "description": "Memory of each node",
              "label": "Memory",
              "type": "integer",
              "range": [
                2048,
                4096
              ],
              "default": 4096,
              "required": "yes",
              "resource_group": [
                2048,
                4096
              ]
            },
            {
              "key": "volume_class",
              "label": "Volume Class",
              "description": "The volume type for each node",
              "type": "integer",
              "range": [
                2,
                5,
                100,
                200
              ],
              "default": 200,
              "required": "yes",
              "resource_group": [
                100,
                200
              ]
            },
            {
              "key": "volume_size",
              "label": "Volume Size",
              "description": "The volume size for each instance",
              "type": "integer",
              "default": 20,
              "min": 20,
              "max": 50,
              "step": 10,
              "required": "yes"
            },
            {
              "key": "count",
              "label": "Node Count",
              "description": "Each ConfigServer defaults to a replica set architecture (three nodes), and modification is not currently supported.",
              "type": "integer",
              "min": 1,
              "max": 7,
              "default": 3,
              "range": [
                1,
                3,
                5,
                7
              ],
              "required": "yes",
              "resource_group": [
                1,
                3
              ]
            }
          ]
        }
      ]
    },
    {
      "key": "service_params",
      "description": "Custom service configuration properties",
      "type": "array",
      "properties": [
        {
          "key": "fcv",
          "label": "Feature compatibility version",
          "description": "if you upgrade your cluster from 3.4 to current version, fcv remains 3.4. Please test your server&client thoroughly before changing fcv to 3.6!",
          "default": "3.6",
          "range": ["3.4", "3.6"],
          "type": "string",
          "required": "yes"
        }
      ]
    },
    {
      "key": "env",
      "description": "Application configuration properties",
      "type": "array",
      "properties": [
        {
          "key": "conf.userPass",
          "label": "User root's Password",
          "description": "Must contain a combination of uppercase and lowercase letters and numbers, special characters can be used (including @#%&*()_+-=), and the length is between 8-32",
          "type": "password",
          "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z@#\\%\\&\\*\\(\\)\\_\\+\\-\\=]{8,32}$",
          "default": "Change1Pwd",
          "required": "yes"
        },
        {
          "key": "conf.monitor.userPass",
          "label": "User qc_monitor's Password",
          "description": "Must contain a combination of uppercase and lowercase letters and numbers, special characters can be used (including @#%&*()_+-=), and the length is between 8-32",
          "type": "password",
          "pattern": "^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z@#\\%\\&\\*\\(\\)\\_\\+\\-\\=]{8,32}$",
          "default": "Change1Pwd",
          "required": "yes"
        },
        {
          "key": "conf.storage.engine",
          "label": "Storage engine",
          "description": "The storage engine used by MongoDB, can NOT be changed",
          "type": "string",
          "default": "wiredTiger",
          "range": [
            "wiredTiger"
          ],
          "changeable": false,
          "required": "no"
        },
        {
          "key": "conf.zabbix.server.addr",
          "label": "Zabbix server's ip address",
          "description": "Zabbix server's ip address",
          "type": "string",
          "default": "127.0.0.1",
          "required": "no"
        },
        {
          "key": "conf.zabbix.agent.port",
          "label": "Zabbix agent's listening port",
          "description": "Default value: 10050",
          "type": "integer",
          "default": 10050,
          "min": 1025,
          "max": 65535,
          "required": "no"
        },
        {
          "key": "conf.zabbix.agent.enabled",
          "label": "Enable zabbix agent or not",
          "description": "Enable zabbix agent or not",
          "default": "no",
          "type": "string",
          "range": [
            "yes",
            "no"
          ],
          "required": "no"
        },
        {
          "key": "conf.node.exporter.enabled",
          "label": "node.exporter.enabled.label",
          "description": "node.exporter.enabled.description",
          "default": "no",
          "type": "string",
          "range": [
            "yes",
            "no"
          ],
          "required": "no"
        },
        {
            "key": "conf.node.exporter.port",
            "label": "node.exporter.port.label",
            "description": "node.exporter.port.description",
            "default": 9100,
            "type": "integer",
            "min": 1025,
            "max": 65535,
            "required": "no"
        },
        {
          "key": "conf.caddy.user",
          "label": "caddy-user",
          "description": "username for caddy-server",
          "type": "string",
          "pattern": "^[^\\x20\\x22\\x27]*$",
          "default": "caddy",
          "required": "no"
        },
        {
          "key": "conf.caddy.password",
          "label": "caddy-password",
          "description": "password for caddy-server",
          "type": "password",
          "default": "caddy",
          "pattern": "^[^\\x20\\x22\\x27]*$",
          "required": "no"
        },
        {
          "key": "conf.caddy.enabled",
          "label": "caddy.enabled.label",
          "description": "caddy.enabled.description",
          "default": "no",
          "type": "string",
          "range": [
            "yes",
            "no"
          ],
          "required": "no"
        },
        {
          "key": "replica",
          "description": "The role configuration properties of the application",
          "type": "array",
          "properties": [
            {
              "key": "conf.net.port",
              "label": "Config Server's net.port",
              "description": "Can NOT be set to 27099, can NOT be changed if the cluster has been created, default value: 27019",
              "type": "integer",
              "default": 27017,
              "pattern": "^(?!27099)(102[4-9]|10[3-9]\\d|1[1-9]\\d\\d|[2-9]\\d{3}|[1-5]\\d{4}|6[0-4]\\d{3}|65[0-4]\\d{2}|655[0-2]\\d|6553[0-5])$",
              "changeable": false,
              "required": "no",
              "min": 1025,
              "max": 65535
            },
            {
              "key": "conf.setParameter.cursorTimeoutMillis",
              "label": "Config Server's setParameter.cursorTimeoutMillis",
              "description": "Unit: ms, default value: 600000",
              "type": "integer",
              "default": 600000,
              "required": "no"
            },
            {
              "key": "conf.operationProfiling.mode",
              "label": "Config Server's operationProfiling.mode",
              "description": "[off, slowOp, all], default value: off",
              "type": "string",
              "range": [
                "off",
                "slowOp",
                "all"
              ],
              "default": "off",
              "required": "no"
            },
            {
              "key": "conf.operationProfiling.slowOpThresholdMs",
              "label": "Config Server's operationProfiling.slowOpThresholdMs",
              "description": "Unit: ms, default value: 100",
              "type": "integer",
              "default": 100,
              "required": "no"
            },
            {
              "key": "conf.replication.oplogSizeMB",
              "label": "Config Server's replication.oplogSizeMB",
              "description": "Unit: MB, defalut value: 2048",
              "type": "integer",
              "default": 20480,
              "required": "no",
              "min": 990,
              "max": 51200
            },
            {
              "key": "conf.replication.enableMajorityReadConcern",
              "label": "Shard's replication.enableMajorityReadConcern",
              "description": "Need restart mongod.service if being changed, default value: true",
              "type": "string",
              "default": "true",
              "range": ["true", "false"],
              "required": "no"
            }
          ]
        }
      ]
    }
  ]
}
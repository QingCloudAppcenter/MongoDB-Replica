[Unit]
Description=MongoShake
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
User=root
Group=root

ExecStart=/usr/bin/mongoshake -conf=/opt/app/currrent/conf/mongoshake/mongoshake.conf

SyslogIdentifier=MongoShake
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target